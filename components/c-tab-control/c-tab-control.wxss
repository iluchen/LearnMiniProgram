/* components/c-tab-control/c-tab-control.wxss */
.tab {
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  background: orange;
}
.item {
  flex: 1;
  text-align: center;
}
.active {
  color: red;
}
.line {
  height: 100%;
}
.item.active .line {
  border-bottom: 3rpx solid red;
  padding-bottom: 14rpx;
}